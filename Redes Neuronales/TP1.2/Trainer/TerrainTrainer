global data = dlmread('terrain04.data',',',1,0)

function amount = getSampleSize()
	global data;
	amount = rows(data);
endfunction

function sample = getSample(i) 
	global data;
	sample = data(i, 1:end-1);
endfunction

function answer = getAnswer(i)
	global data;
	answer = data(i, end);
endfunction

function matrix = getSampleMatrix()
	global data;
	matrix = data(:, 1:end-1);
endfunction

function matrix = getAnswerMatrix()
	global data;
	matrix = data(:, end);
endfunction

function setUpBatch()
	global data;
	membraines = zeros(getSampleSize(),1) -1;
	data = [membraines, data];
endfunction