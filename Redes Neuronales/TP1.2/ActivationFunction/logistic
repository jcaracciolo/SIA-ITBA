function answer = logistic(x)
	answer = 1 / (1+e**-x);
end

function answer = derivativeLogistic(x)
	logi = logistic(x)
	answer = logi*(1-logi);
end

function answer = activate(matrix)
	answer = arrayfun(@logistic, matrix);
endfunction

function answer = correction(matrix)
	answer = arrayfun(@derivativeLogistic, matrix);
endfunction			
